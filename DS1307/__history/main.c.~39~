#include <main.h>
#include <DS1307.c>

// DS1307 library variable declaration
RTC_Time *mytime;

void rtc_print(){
  printf("TIME: %02u:%02u:%02u", mytime->hours, mytime->minutes, mytime->seconds);
  printf(" DATE: %02u/%02u/20%02u\r\n", mytime->day, mytime->month, mytime->year);
}
 
void main(){
  delay_ms(1000);  // wait a second
  mytime = RTC_Get();
  rtc_print();
  delay_ms(1000);  // wait a second
 
  mytime->hours   = 03;
  mytime->minutes = 10;
  mytime->seconds = 00;
  mytime->day   = 17;
  mytime->month = 02;
  mytime->year  = 20;
   delay_ms(1000);
  //RTC_Set(mytime);
 
 OSC_Disable()
  while(TRUE){
    mytime = RTC_Get();
    rtc_print();
    delay_ms(30000);  // wait 100 ms
  }
}























